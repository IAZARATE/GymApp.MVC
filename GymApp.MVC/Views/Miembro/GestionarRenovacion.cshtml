@model GymApp.MVC.Entidades.Miembro

<h2>Renovar Membresía</h2>

<form asp-action="GestionarRenovacion">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="tipoMembresia" class="control-label">Tipo de Membresía</label>
        <select id="tipoMembresia" name="tipoMembresia" class="form-control">
            <option value="Mensual">Mensual</option>
            <option value="Trimestral">Trimestral</option>
            <option value="Anual">Anual</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Renovar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>