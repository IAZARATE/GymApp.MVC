@model GymApp.MVC.Entidades.Equipo

<h2>Reservar Equipo</h2>

<h4>@Model.Nombre</h4>

<form asp-action="GestionarReserva">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="fechaInicio" class="control-label">Fecha de Inicio</label>
        <input type="datetime-local" id="fechaInicio" name="fechaInicio" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="fechaFin" class="control-label">Fecha de Fin</label>
        <input type="datetime-local" id="fechaFin" name="fechaFin" class="form-control" required />
    </div>
    <div class="form-group">
        <input type="submit" value="Reservar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>